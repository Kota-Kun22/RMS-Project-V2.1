<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/customers_profile_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/customer_profile_pic"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_gravity="center"
                    android:background="@drawable/pp_bg"
                    android:padding="4dp"
                    android:src="@drawable/add_media_image" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name3"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="7.5dp"
                        android:fontFamily="@font/poppins_thin"
                        android:text="Amit Jha"
                        android:textFontWeight="500"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp">

                        <TextView
                            android:id="@+id/mob_number_label"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:layout_marginTop="7.5dp"
                            android:fontFamily="@font/poppins_thin"
                            android:text="@string/mob_number_profile_display"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/Phone_number3"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:layout_toEndOf="@id/mob_number_label"
                            android:layout_marginTop="7.5dp"
                            android:fontFamily="@font/poppins_thin"
                            android:text=" 9588779890"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="123dp"
                            android:layout_height="28dp"
                            android:layout_alignParentEnd="true"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/recharge3"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:backgroundTint="#6D7DFF"
                                android:src="@drawable/flash_ic"
                                app:tint="#6D7DFF" />

                            <ImageView
                                android:id="@+id/message3"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_marginStart="5dp"
                                android:src="@drawable/comment_ic"
                                app:tint="#6D7DFF" />

                        </LinearLayout>
                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_thin"
                            android:layout_marginTop="7.5dp"
                            android:text="Telecom:"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/telecom3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_thin"
                            android:text="Airtel"
                            android:layout_marginTop="7.5dp"
                            android:textSize="15sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_thin"
                            android:layout_marginLeft="15dp"
                           android:layout_marginTop="7.5dp"
                            android:text="Validity:"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/validity3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_thin"
                            android:layout_marginTop="7.5dp"
                            android:text="56 days"
                            android:textSize="15sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:elevation="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:orientation="horizontal"
                    android:layout_below="@id/customers_profile_card">
                    <TextView
                        android:id="@+id/expired3"
                        android:layout_width="match_parent"
                        android:layout_height="21dp"
                        android:fontFamily="@font/poppins_thin"
                        android:text="Expired"
                        android:paddingEnd="16dp"
                        android:textFontWeight="500"
                        android:textAlignment="textEnd"
                        android:textColor="#FF0000"
                        android:textSize="13sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
