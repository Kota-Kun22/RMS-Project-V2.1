<!-- res/layout/dialog_edit_hof.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextHOFName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="HOF Name" />

    <EditText
        android:id="@+id/editTextHOFNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="HOF Number" />

    <EditText
        android:id="@+id/editTextHOFNameTelecom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Telecom" />
</LinearLayout>
