<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/customers_profile_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="40dp"
        app:cardBackgroundColor="@color/whiteSmoke"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/customer_profile_pic"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_gravity="center"
                    android:background="@drawable/pp_bg"
                    android:padding="4dp"
                    android:src="@drawable/add_media_image" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="7.5dp"
                        android:fontFamily="@font/poppins_thin"
                        android:text="Amit Jha"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp">

                        <TextView
                            android:id="@+id/mob_number_label"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:layout_marginTop="7.5dp"
                            android:fontFamily="@font/poppins_light"
                            android:text="@string/mob_number_profile_display"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/Phone_number3"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="7.5dp"
                            android:layout_marginEnd="24dp"
                            android:layout_toEndOf="@id/mob_number_label"
                            android:fontFamily="@font/poppins_light"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text=" 9588779890"

                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:layout_alignParentEnd="true"
                            android:paddingLeft="24dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/recharge3"
                                android:layout_width="28dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/flash_ic"/>

                            <ImageView
                                android:id="@+id/message3"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="4dp"
                                android:src="@drawable/comment_ic"/>

                        </LinearLayout>
                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:layout_marginTop="7.5dp"
                            android:fontFamily="@font/poppins_light"
                            android:text="Telecom : "
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/telecom3"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:layout_marginTop="7.5dp"
                            android:fontFamily="@font/poppins_light"
                            android:text="Airtel"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="7.5dp"
                            android:fontFamily="@font/poppins_light"
                            android:text="Validity : "
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/validity3"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:layout_marginTop="7.5dp"
                            android:fontFamily="@font/poppins_light"
                            android:text="56 days"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/hof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:cardBackgroundColor="@color/whiteSmoke">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_thin"
                        android:text="Head Of Family"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="4dp"
                        android:layout_height="wrap_content"
                        android:text="|"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/Gray"
                        android:textSize="40sp"/>

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_marginLeft="6dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="18dp"
                                android:text="Name : "
                                android:textSize="15dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:fontFamily="@font/poppins_light"/>
                            <TextView
                                android:id="@+id/name22"
                                android:layout_width="wrap_content"
                                android:layout_height="18dp"
                                android:text=" Aisha Jha"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="15dp"
                                android:fontFamily="@font/poppins_light" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/textMob"
                                android:layout_width="wrap_content"
                                android:layout_height="18dp"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/poppins_light"
                                android:text="Mob. No : "
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="14dp"/>
                            <TextView
                                android:id="@+id/Mobile98"
                                android:layout_width="wrap_content"
                                android:layout_height="18dp"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/poppins_light"
                                android:text="9588779890"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="14dp" />
                        </LinearLayout>


                    </LinearLayout>
                    <ImageView
                        android:id="@+id/recharge45"
                        android:layout_width="28dp"
                        android:layout_height="match_parent"
                        android:backgroundTint="#6D7DFF"
                        android:src="@drawable/comment_ic"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/expired3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_thin"
                android:text="Expired"
                android:paddingEnd="35dp"
                android:textAlignment="textEnd"
                android:textColor="#FF0000"
                android:textSize="13sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>